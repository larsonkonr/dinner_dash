<div id="container">
  <% @categories.each do |category| %>
    <div class="category-block">
    <h2 class="menu-category" ><a><%= category.name %></a></h2>
      <ul>
        <% category.items.each do |item| %>
        <ul class="span2" >
          <article class="menu-item">
            <div class="col-sm-6 col-md-4">
              <div class="thumbnail" style="height:350px;">
                <%= image_tag item.image.url(:medium) %>
                <div class="caption">
                  <h3><%= item.title %></h3>
                  <p> <%= item.description %></p>
                  <p style="position:absolute;bottom:30px;left:25px;margin:0;padding:5px 3px;"> Price:$<%= item.price %></p>
                  <p><a href="#" class="btn btn-default" role="button" style="position:absolute;bottom:30px;right:25px;margin:0;padding:5px 3px;">Add to Cart</a></p>
                </div>
              </div>
            </article>
          </span>
        </ul>
        <%end%>
      </div>
      </ul>
  <%end%>
</div>
